{% extends "AcmeTaskBundle:Layouts:master.html.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Task Listing page</h1>
				<div class="panel panel-default">
					<div class="panel-heading">New Task</div>
					<div class="panel-body">
						{{ form(form) }}
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">Current Tasks</div>
					<div class="panel-body">
						<table class="table">
							{% for task in tasks %}
								<tr>
									<td>
										<code>{{ task.id }}</code> {{ task.title }}
									</td>
									<td class="text-right">
										<button class="btn btn-success">Update</button>
										<button class="btn btn-danger">Delete</button>	
									</td>
								</tr>
							{% endfor %}
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}	
