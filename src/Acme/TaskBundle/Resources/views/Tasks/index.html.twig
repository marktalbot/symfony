{% extends "AcmeTaskBundle:Layouts:master.html.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Task Listing page</h1>
				<div class="panel panel-default">
					<div class="panel-heading">New Task</div>
					<div class="panel-body">
						<div class="form-group">
							<label for="">Task</label>
							<input type="text" class="form-control">
						</div>
						<div class="form-group">
							<button class="btn btn-default">Add Task</button>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">Current Tasks</div>
					<div class="panel-body">
						<table class="table">
							<tr>
								<td>
									(task name #1)
								</td>
								<td class="text-right">
									<button class="btn btn-danger">Delete</button>	
								</td>
							</tr>
							<tr>
								<td>
									(task name #2)
								</td>
								<td class="text-right">
									<button class="btn btn-danger">Delete</button>	
								</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}	
