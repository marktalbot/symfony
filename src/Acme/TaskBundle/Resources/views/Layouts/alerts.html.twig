<div class="alerts text-center">
	<div class="row">
		<div class="col-md-12">
			{% for flash_message in app.session.flashbag.get('success') %}
				<div class="alert alert-success">
					<div class="container">
						{{ flash_message }}
					</div>
				</div>
			{% endfor %}
			{% for flash_message in app.session.flashbag.get('error') %}
				<div class="alert alert-danger">
					<div class="container">
						{{ flash_message }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>